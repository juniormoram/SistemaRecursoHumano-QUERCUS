    var CantVacas = TempData["CantVacas"];
}

<h2>Registro de una nueva solicitud de vacaciones</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <div class="form-horizontal">
            <hr />
