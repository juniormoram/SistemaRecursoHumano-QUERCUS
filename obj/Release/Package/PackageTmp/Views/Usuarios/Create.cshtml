            @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ConfirContrasena, "Confirmación de contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
