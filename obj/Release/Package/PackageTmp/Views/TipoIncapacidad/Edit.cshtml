@model RHQuercus.TipoIncapacidad

@{
    ViewBag.Title = "Edit";
}

<h2>Actualizar tipo de incapacidad</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTipoInca)

        <div class="form-group">
            @Html.LabelFor(model => model.NombreInca, "Nombre incapacidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreInca, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreInca, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar tipo" class="btn btn-success" />
            </div>
        </div>
    </div>
}

