@model RHQuercus.PermisoLaboral

@{
    ViewBag.Title = "Details";
}

<h2>Información del permiso laboral</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Colaborador
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Persona.NombrePers)
            @Html.DisplayFor(model => model.Persona.Apellidos)
        </dd>
        <hr />
        <dt>
            Tipo de permiso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoPermiso1.Nombre)
        </dd>
        <dt>
            Estado de la solicitud
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado1.EstadoSolicitud)
        </dd>
        <hr />
        <dt>
            Fecha de inicio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>

        <dt>
            Fecha de finalización
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaFinal)
        </dd>

        <dt>
            Cantidad de días
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CantDias)
        </dd>

        <dt>
            Observaciones
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observacion)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.PagoObligatorio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PagoObligatorio)
